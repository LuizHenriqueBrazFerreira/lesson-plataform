{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "server.ts",
  "scripts": {
    "start": "node dist/server.js",
    "start:dev": "ts-node src/server.ts",
    "dev": "nodemon --watch \"./src/**\" --ext \"ts,js\" --ignore \"src/**/*.spec.ts,src/**/*.json\" --exec \"ts-node src/server.ts\"",
    "lint": "eslint --no-inline-config --no-error-on-unmatched-pattern -c .eslintrc.json .",
    "test": "mocha -r ts-node/register tests/**/**/*.test.ts --exit -t 60000 --exit",
    "build": "npx -y tsc",
    "prestart": "npm run db:reset",
    "predev": "npm run db:reset",
    "db:create": "npx sequelize-cli db:create",
    "db:reset": "npx -y tsc && npx sequelize-cli db:drop && npx sequelize-cli db:create && npx sequelize-cli db:migrate && npx sequelize-cli db:seed:all"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.9.2",
    "nodemailer": "^6.9.13",
    "nodemon": "^3.1.0",
    "sequelize": "^6.37.1",
    "sequelize-cli": "^6.6.2",
    "typescript": "^4.9.5"
  },
  "devDependencies": {
    "@types/bcryptjs": "2.4.2",
    "@types/chai": "4.3.0",
    "@types/chai-http": "4.2.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/mocha": "9.1.0",
    "@types/node": "16.11",
    "@types/nodemailer": "^6.4.14",
    "@types/sinon": "10.0.11",
    "@types/sinon-chai": "3.2.9",
    "chai": "4.3.6",
    "chai-http": "4.3.0",
    "eslint": "6.8.0",
    "eslint-config-trybe-backend": "1.0.1",
    "mocha": "9.2.1",
    "nyc": "15.1.0",
    "path": "^0.12.7",
    "sinon": "13.0.1",
    "sinon-chai": "3.7.0",
    "ts-node": "^10.9.1"
  }
}
